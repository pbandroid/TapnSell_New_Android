<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlParent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/twotwenty" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/five"
        android:weightSum="2" >

        <RelativeLayout
            android:id="@+id/rlMain1"
            android:layout_width="0dp"
            android:layout_height="@dimen/oneeighty"
            android:layout_marginRight="@dimen/five"
            android:layout_weight="1"
            android:background="@drawable/order_complete_tapinspire_bg_image" >

            <ImageView
                android:id="@+id/ivItem1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/onefourtydp"
                android:scaleType="centerCrop"
                android:src="@drawable/order_complete_tap_inspire_image_bg" />

            <LinearLayout
                android:id="@+id/rlPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/five"
                android:background="@drawable/order_complete_tap_inspire_price"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvPriceType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="@dimen/five"
                    android:paddingRight="2dp"
                    android:text="$"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/eightteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:maxLength="3"
                    android:paddingRight="@dimen/three"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/eightteen"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/list_item_price_transparent" />
            </LinearLayout>

            <com.convertingoffers.tapnsell.util.CustomTextView
                android:id="@+id/tvName1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivItem1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:shadowColor="#11000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/eightteen"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMain2"
            android:layout_width="0dp"
            android:layout_height="@dimen/oneeighty"
            android:layout_weight="1"
            android:background="@drawable/order_complete_tapinspire_bg_image" >

            <ImageView
                android:id="@+id/ivItem2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/onefourtydp"
                android:scaleType="centerCrop"
                android:src="@drawable/order_complete_tap_inspire_image_bg" />

            <LinearLayout
                android:id="@+id/rlPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/five"
                android:background="@drawable/order_complete_tap_inspire_price"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvPriceType2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="@dimen/five"
                    android:paddingRight="2dp"
                    android:text="$"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/eightteen"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:enabled="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:maxLength="3"
                    android:paddingRight="@dimen/three"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/eightteen"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/list_item_price_transparent" />
            </LinearLayout>

            <com.convertingoffers.tapnsell.util.CustomTextView
                android:id="@+id/tvName2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivItem2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:shadowColor="#11000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/eightteen"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>