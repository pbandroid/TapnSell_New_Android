<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_dialog_bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/five"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/five"
        android:background="@drawable/verify_dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/five" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/five"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivVerifyIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/verify_true"
                android:visibility="gone" />

            <com.convertingoffers.tapnsell.util.AutoResizeTextView
                android:id="@+id/tvText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Private sms just sent to:"
                android:textColor="#808c9d"
                android:textSize="@dimen/twenty" />

            <com.convertingoffers.tapnsell.util.AutoResizeTextView
                android:id="@+id/tvPhoneEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="776-821-8888"
                android:textColor="#808c9d"
                android:textSize="@dimen/twentyfive"
                android:textStyle="bold" />

            <com.convertingoffers.tapnsell.util.AutoResizeTextView
                android:id="@+id/tvText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="click the link to verify e-mail"
                android:textColor="#808c9d"
                android:textSize="@dimen/twenty" />

            <ImageView
                android:id="@+id/ivContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:src="@drawable/verify_continue" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>