<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirtydp"
        android:paddingLeft="@dimen/five"
        android:paddingRight="@dimen/five" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/make_offer_bg" />
<RelativeLayout    
    android:id="@+id/rlMakeOffer" android:layout_width="@dimen/onetwentydp"
            android:layout_height="@dimen/oneeighty"
            android:layout_centerVertical="true"
            >
  
  
     <LinearLayout
            android:id="@+id/llMakeOffer"
            android:layout_width="@dimen/onetwentydp"
            android:layout_height="@dimen/oneseventy"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/five"
            android:paddingLeft="@dimen/five"
            android:weightSum="4.5" >

         
         
         
         
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/make_offer_image_top" />
  <RelativeLayout
                android:layout_width="115dp"
                android:layout_height="0dp"
                android:layout_weight="3" >
            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="115dp"
                     android:background="@drawable/counter_image_bg"
                android:padding="1dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/make_offer_item_bg" />

</RelativeLayout>
            <com.convertingoffers.tapnsell.util.CustomTextView
                android:id="@+id/tvItemName"
                android:layout_width="115dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/make_offer_item_name_bg"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:singleLine="true"
                android:text=" "
                android:textColor="@android:color/white"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold"
                customFont:fontFamily="TIMES_1.TTF" />
            
        </LinearLayout>
    
    <LinearLayout
        android:id="@+id/rlPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/thirtyfivedp"
        android:background="@drawable/offer_exp_price"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal" >

    

        <TextView
            android:id="@+id/tvPriceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/five"
            android:text="$"
            android:textColor="@android:color/white"
         android:textSize="@dimen/fifteen"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:maxLength="7"
            android:paddingRight="@dimen/five"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/fifteen"
            android:textStyle="bold" />
        
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/offer_exp_price_trans" />
        
    </LinearLayout>
     
  </RelativeLayout>
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/three"
            android:src="@drawable/make_offer_close_transparent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rlMakeOffer"
            android:background="@drawable/make_offer_image_right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three"
                android:src="@drawable/make_offer_image_top" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv4"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:orientation="vertical"
                android:paddingLeft="@dimen/three"
                android:paddingRight="@dimen/five"
                android:paddingTop="@dimen/five"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/five"
                    android:singleLine="true"
                    android:text="Your Offer Will"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/twenty" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/three"
                        android:paddingTop="@dimen/three" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/five"
                            android:singleLine="true"
                            android:gravity="center"
                            android:text="Expire in:  "
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/twenty" />

                            <TextView
                                android:id="@+id/tvExpireTime"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/five"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="04:53"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/twenty" />

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:background="@drawable/offer_exp_btn"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <ImageView
                        android:id="@+id/ivIncrease"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/ivBuy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>