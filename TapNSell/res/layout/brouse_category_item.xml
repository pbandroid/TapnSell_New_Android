<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customFont="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlCatMain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five"
    android:background="@drawable/cat_center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="@dimen/fiftydp"
            android:layout_height="@dimen/fiftydp" >

            <ImageView
                android:id="@+id/ivCat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/cat_temp_icon" />
            
        </RelativeLayout>

        <com.convertingoffers.tapnsell.util.CustomTextView
            android:id="@+id/tvCat_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/five"
            android:gravity="center"
            android:paddingLeft="@dimen/five"
            android:paddingRight="@dimen/five"
            android:shadowColor="#50000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:singleLine="true"
            android:text="test"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twelve"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>