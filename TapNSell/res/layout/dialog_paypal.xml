<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/five"
        android:layout_marginTop="@dimen/ten"
        android:background="@drawable/paypal_dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/ten" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/ivPayPalIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/twentyfive"
                    android:src="@drawable/paypal_icon" />

                <TextView
                    android:id="@+id/tvText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivPayPalIcon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/five"
                    android:text="Add Paypal to Get Paid Faster!"
                    android:textColor="#808c9d"
                    android:textSize="@dimen/eightteen" />

                <EditText
                    android:id="@+id/evPayFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvText2"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:layout_marginTop="@dimen/fifteen"
                    android:background="@drawable/paypal_ev"
                    android:hint="First Name"
                    android:nextFocusDown="@+id/evLName"
                    android:paddingBottom="@dimen/ten"
                    android:paddingLeft="@dimen/ten"
                    android:paddingTop="@dimen/ten"
                    android:singleLine="true"
                    android:textSize="@dimen/eightteen" />

                <EditText
                    android:id="@+id/evPayLName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/evPayFName"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:layout_marginTop="@dimen/ten"
                    android:background="@drawable/paypal_ev"
                    android:hint="Last Name"
                    android:nextFocusDown="@+id/evLName"
                    android:paddingBottom="@dimen/ten"
                    android:paddingLeft="@dimen/ten"
                    android:paddingTop="@dimen/ten"
                    android:singleLine="true"
                    android:textSize="@dimen/eightteen" />

                <EditText
                    android:id="@+id/evPaypalEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/evPayLName"
                    android:layout_marginBottom="@dimen/five"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_weight="0.5"
                    android:background="@drawable/paypal_ev"
                    android:hint="PayPal E-mail"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/evLName"
                    android:paddingBottom="@dimen/ten"
                    android:paddingLeft="@dimen/ten"
                    android:paddingTop="@dimen/ten"
                    android:singleLine="true"
                    android:textSize="@dimen/eightteen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/evPaypalEmail"
                    android:layout_margin="@dimen/ten" >

                    <ImageView
                        android:id="@+id/ivCont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/paypal_add_account" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/dialog_counter_close_btn" />

</RelativeLayout>