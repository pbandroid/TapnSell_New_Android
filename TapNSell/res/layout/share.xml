            <com.convertingoffers.tapnsell.util.CustomTextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:shadowColor="#11000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="Share "
                android:textColor="@android:color/white"
                android:textSize="@dimen/eightteen"
                android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/five"
            android:layout_toRightOf="@+id/tvHeader"
            android:src="@drawable/sell_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeader" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirtydp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/five"
            android:paddingRight="@dimen/five"
            android:weightSum="3" >
			
			<ImageView
                android:id="@+id/ivTwitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:layout_weight="1"
                android:src="@drawable/twitter_inactive" />
     

            <ImageView
                android:id="@+id/ivGooglePlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:layout_weight="1"
                android:src="@drawable/google_plus__inactive" />
			
            <ImageView
                android:id="@+id/ivFb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:layout_weight="1"
                android:src="@drawable/facebook__inactive" />
            
        </LinearLayout>
    </RelativeLayout>

   <ImageView
        android:id="@+id/ivCnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/fifteen"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginRight="@dimen/fifteen"
        android:paddingBottom="@dimen/five"
        android:src="@drawable/crag_ebay_cnt" />
</RelativeLayout>