<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMainTapInspire"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneefiftydp"
        android:scaleType="centerCrop"
        android:src="@drawable/transperant" />

    <TextView
        android:id="@+id/Tap_tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/order_price_bg"
        android:gravity="center"
        android:maxLength="13"
        android:padding="@dimen/five"
        android:text="$123"
        android:textColor="@android:color/white"
        android:textSize="@dimen/twelve"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProductImage"
        android:background="@drawable/order_name"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/five"
        android:paddingRight="@dimen/five"
        android:singleLine="true"
        android:text="test test test test test test test test "
        android:textColor="@android:color/white"
        android:textSize="@dimen/fifteen" />

</RelativeLayout>